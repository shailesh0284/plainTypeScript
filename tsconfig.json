{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./build/",
        "noImplicitAny": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "useUnknownInCatchVariables": false
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
